<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintVertical_chainStyle="spread"
    tools:context=".MainActivity"
    android:id="@+id/parent_layout">

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:hint="city"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Date"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/location"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/currentTemp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="#°F "
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@id/date"/>

    <TextView
        android:id="@+id/humidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="realfeel / % humidity "
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/currentTemp"
        />

    <TextView
        android:id="@+id/currentStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UV index / # mph NE"
        app:layout_constraintTop_toBottomOf="@id/humidity"
        android:textAlignment="center"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/dailyMinMax"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:hint="#°F/#°F"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/currentStats"/>

    <TextView
        android:id="@+id/precipChance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="%/% chance of preciptation"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/dailyMinMax"/>


    <TextView
        android:id="@+id/daySummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="in the morning"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/precipChance"/>

    <TextView
        android:id="@+id/nightSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="at night"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/daySummary"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nightSummary"
        app:layout_constraintVertical_weight="1"
        ></android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>